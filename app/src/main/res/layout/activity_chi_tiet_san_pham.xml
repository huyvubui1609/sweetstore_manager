<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChiTietSanPham">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_red_light">

        <ImageButton
            android:id="@+id/btnBackchitietsanpham"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center"
            android:background="@android:color/holo_red_light"
            android:src="@drawable/abc_vector_test"></ImageButton>

        <TextView
            android:id="@+id/tvchitietsanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:text="Chi Tiết Sản Phẩm"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"></TextView>

        <ImageButton
            android:id="@+id/btnCartchitietsanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:background="@android:color/holo_red_light"
            android:src="@drawable/icons8cart"></ImageButton>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewchitietsanpham"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"></ImageView>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewtenchitietsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Tên sản phẩm"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/textViewgiachitietsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Giá sản phẩm"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp"></TextView>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner"
                android:textAlignment="center"></Spinner>

            <Button
                android:id="@+id/btnchitietsanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD TO CART"
                android:textColor="@color/cardview_dark_background"
                android:textSize="15sp"></Button>

            <Button
                android:id="@+id/btnmuangay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BUY NOW"
                android:textColor="@color/cardview_dark_background"
                android:textSize="15sp"></Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Mô Tả Chi Tiết Sản Phẩm"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"></TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textViewmotachitietsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:textSize="20sp"></TextView>
        </ScrollView>
    </LinearLayout>
</LinearLayout>